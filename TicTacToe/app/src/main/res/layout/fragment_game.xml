<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/GameMaster"
        android:layout_width="282dp"
        android:layout_height="119dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:text="Tic Tac Toe Time!"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn00"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="59dp"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GameMaster" />

    <Button
        android:id="@+id/btn01"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="59dp"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/btn00"
        app:layout_constraintTop_toBottomOf="@+id/GameMaster" />

    <Button
        android:id="@+id/btn02"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="59dp"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/btn01"
        app:layout_constraintTop_toBottomOf="@+id/GameMaster" />

    <Button
        android:id="@+id/btn10"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="23dp"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn00" />

    <Button
        android:id="@+id/btn11"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="23dp"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/btn10"
        app:layout_constraintTop_toBottomOf="@+id/btn01" />

    <Button
        android:id="@+id/btn12"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="23dp"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/btn11"
        app:layout_constraintTop_toBottomOf="@+id/btn02" />

    <Button
        android:id="@+id/btn22"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/btn21"
        app:layout_constraintTop_toBottomOf="@+id/btn12" />

    <Button
        android:id="@+id/btn20"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="28dp"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn10" />

    <Button
        android:id="@+id/btn21"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="28dp"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/btn20"
        app:layout_constraintTop_toBottomOf="@+id/btn11" />

</androidx.constraintlayout.widget.ConstraintLayout>